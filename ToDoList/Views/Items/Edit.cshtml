<h2>Edit item: @Model["item"].GetDescription()</h2>

<form action="/categories/@Model["category"].GetId()/items/@Model["item"].GetId()/edititem" method="post">
  <label for="newDescription">Name:</label>
  <input type="text" name="newDescription" value="@Model["item"].GetDescription()"><br><br>
  <label for="newDueDate">Due Date:</label>
  <input type="date" name="newDueDate" value="@Model["item"].GetDueDate()"><br><br>
  <button type="submit">Edit</button>
</form>

<h4><a href="/categories/@Model["category"].GetId()/items/@Model["item"].GetId()">Return to previous page</a></h4>
