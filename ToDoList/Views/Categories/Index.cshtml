<html>
<head>
<link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>

<link rel='stylesheet' href='~/css/styles.css'>
</head>
<center><body>
<h1>Categories</h1>

@if (@Model.Count == 0)
{
<h3>No categories have been added yet!</h3>
}

@foreach (var category in Model)
{




<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">Category</h5>
    <p class="card-text"><a href='/categories/@category.GetId()'>@category.GetName()</a></p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">  <div class="row">

        <form action="/categories/@category.GetId()/delete" method="post">
          <button class="btn btn-sm" type="submit" name="button">Clear</button>
        </form>

      <button class="btn btn-sm" ><a href='/categories/@category.GetId()/delete'>Delete</a></button>
      <button class="btn btn-sm" ><a href='/categories/@category.GetId()/edit'>Edit</a></button>
      </div></li>
  </ul>
  <div class="card-body">

  </div>
</div>



}


</div>
</body>
</center>
</html>
