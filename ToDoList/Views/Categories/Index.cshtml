<h1>Categories</h1>

@if (@Model.Count == 0)
{
<h3>No categories have been added yet!</h3>
}

@foreach (var category in Model)
{
  <form action="/categories/@category.GetId()/delete" method="post">
    <button type="submit" name="button">Clear</button>
  </form>
<h3><a href='/categories/@category.GetId()'>@category.GetName()</a><br></h3>
//<a href='/categories/@category.GetId()/delete'>Delete</a></h3>
}

<p><a href='/categories/new'>New category</a></p>
<p><a href='/'>Back home</a></p>
